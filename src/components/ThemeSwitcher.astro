<div class="w-12 h-12 bg-white dark:bg-ui-dark-surface rounded-base border-2 border-ui-light-border dark:border-ui-dark-border shadow-light dark:shadow-dark hover:bg-ui-light-hover dark:hover:bg-ui-dark-hover hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none dark:hover:shadow-none transition-all flex items-center justify-center">
    <button type="button" id="theme-selector" class="w-full h-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-ui-light-text dark:text-ui-dark-text hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-ui-light-text dark:text-ui-dark-text block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
    </button>
</div>

<script>
  // Initialize theme on page load
  function initTheme() {
    // Only use dark theme if explicitly set in localStorage
    if (localStorage.theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      // Default to light theme
      document.documentElement.classList.remove('dark');
      localStorage.theme = 'light';
    }
  }

  // Run initialization on page load
  initTheme();

  // Handle theme toggle
  document.getElementById('theme-selector')?.addEventListener('click', () => {
    if (localStorage.theme === 'dark') {
      localStorage.theme = 'light';
      document.documentElement.classList.remove('dark');
    } else {
      localStorage.theme = 'dark';
      document.documentElement.classList.add('dark');
    }
  });
</script>
