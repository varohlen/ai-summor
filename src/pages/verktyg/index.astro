---
import BaseLayout from '../../layouts/BaseLayout.astro';

const tools = [
  {
    title: 'Prompt och kontext',
    description: 'Ett verktyg för att bygga strukturerade prompter genom att separera instruktion (prompt) från information (kontext).',
    href: '/verktyg/prompt-och-kontext',
    icon: 'fas fa-cogs'
  }
];
---

<BaseLayout title="Verktygslåda">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-heading">Verktygslåda</h1>
      <p class="text-lg text-muted-foreground mt-4 max-w-2xl mx-auto">
        En samling praktiska verktyg för att utforska och förstå AI-koncept.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {tools.map(tool => (
        <a href={tool.href} class="group block p-8 rounded-lg border bg-card hover:bg-accent hover:shadow-lg transition-all duration-300">
          <h2 class="text-2xl font-semibold mb-2 font-sans flex items-center gap-3">
            <i class={`${tool.icon} text-primary group-hover:scale-110 transition-transform`}></i>
            {tool.title}
          </h2>
          <p class="text-muted-foreground">
            {tool.description}
          </p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
