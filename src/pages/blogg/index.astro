---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Blogg - ai.summor.se">
  <div class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-heading mb-8">Blogg</h1>
    <section>
      <ul class="space-y-8">
        {posts.map((post) => (
          <li>
            <a href={`/blogg/${post.slug}/`} class="block group">
              <h2 class="text-2xl font-heading group-hover:text-primary transition-colors">{post.data.title}</h2>
              <p class="text-muted-foreground mt-2">{post.data.description}</p>
              <time datetime={post.data.pubDate.toISOString()} class="text-sm text-muted-foreground mt-2 block">
                {new Date(post.data.pubDate).toLocaleDateString('sv-SE', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </a>
          </li>
        ))}
      </ul>
      {posts.length === 0 && (
        <p class="text-muted-foreground">Här var det tomt! Inga blogginlägg ännu.</p>
      )}
    </section>
  </div>
</BaseLayout>
